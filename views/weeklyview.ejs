<div class="mt-3">
    <table class="table table-striped table-hover table-bordered "> 
        <thead class="table-dark p-4">
            <tr>
                <th>Habit Name</th>
                <% let todaysDate = new Date().getDate();%>
                <th><%= todaysDate-6 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate-5 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate-4 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate-3 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate-2 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate-1 %>-<%= Month[new Date().getMonth()] %></th>
                <th><%= todaysDate %>-<%= Month[new Date().getMonth()] %></th>
            </tr>
        </thead>
        <tbody>
            <% for(let habit of habits){ %>
                <tr>
                    <th> <%= habit.description %> </th>
                    <% for(let i = 0 ; i<habit.days.length;i++) {%>
                        <td>
                            <div class="input-group mb-3">
                                <button class="btn btn-secondary dropdown-toggle " type="button"  data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true"><%= habit.days[i] %></button>
                                <ul style="z-index: 99!important"class="dropdown-menu index" aria-labelledby="dropdownMenuButton" style="z-index: 2;">
                                <li><a class="dropdown-item " href="/habit/update/<%= habit.id %>/<%= i %>/Done ">Done</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/habit/update/<%= habit.id %>/<%= i %>/Not%20Done ">Not Done</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/habit/update/<%= habit.id %>/<%= i %>/None ">None</a></li>
                                </ul>
                            </div>   
                        
                        </td>
                        
                    <% } %>
                </tr>
            <% }%>
        </tbody>
    </table>
</div>